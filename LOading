<body>

    <!-- Слой фона (будет управляться скриптом) -->
    <div class="background" id="background"></div>

    <!-- Затемняющий оверлей -->
    <div class="overlay"></div>

    <!-- Основной контент -->
    <div class="content">
        <div class="server-name">ДОБРО ПОЖАЛОВАТЬ</div>
        <div class="loading-text">Загрузка...</div>
        <div class="info-panel">
            <p><strong>Сервер:</strong> Garry's Mod</p>
            <p><strong>Карта:</strong> Загрузка...</p>
            <p><strong>Игроков:</strong> 0/16</p>
            <p><strong>Правила:</strong> Играйте честно и уважайте других</p>
            <p><em>Ваши фотографии на фоне</em></p>
        </div>
    </div>

    <script>
        // !!! ЗАМЕНИТЕ ЭТИ ССЫЛКИ НА СВОИ ФОТОГРАФИИ !!!
        // Можно использовать относительные пути: "photo1.jpg", "images/background.jpg"
        const imageUrls = [
            "photo1.jpg",   // первое фото
            "photo2.jpg",   // второе фото
            "photo3.jpg",   // третье фото
            "photo4.jpg"    // четвёртое фото
        ];

        // Индекс текущего изображения
        let currentIndex = 0;
        const bgElement = document.getElementById('background');

        // Функция смены фона
        function changeBackground() {
            // Устанавливаем новое изображение
            bgElement.style.backgroundImage = `url('${imageUrls[currentIndex]}')`;
            
            // Переход к следующему (циклически)
            currentIndex = (currentIndex + 1) % imageUrls.length;
        }

        // Предзагрузка изображений (чтобы не было миганий)
        function preloadImages(urls) {
            urls.forEach(url => {
                const img = new Image();
                img.src = url;
            });
        }

        // Запуск: предзагрузка, установка первого фона и интервал смены
        if (imageUrls.length > 0) {
            preloadImages(imageUrls);
            changeBackground(); // сразу показываем первое
            // Меняем фон каждые 10 секунд (можно изменить интервал)
            setInterval(changeBackground, 10000);
        } else {
            // Если массив пуст, ставим заглушку
            bgElement.style.backgroundImage = "url('https://via.placeholder.com/1920x1080?text=No+Images')";
        }
    </script>
</body>
